<h1>Listing rooms</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Letters</th>
    <th>Maxplayers</th>
    <th>Maxmatches</th>
    <th>Maxmatchtime</th>
    <th>Private</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @rooms.each do |room| %>
  <tr>
    <td><%= room.name %></td>
    <td><%= room.letters %></td>
    <td><%= room.maxplayers %></td>
    <td><%= room.maxmatches %></td>
    <td><%= room.maxmatchtime %></td>
    <td><%= room.private %></td>
    <td><%= link_to 'Show', room %></td>
    <td><%= link_to 'Edit', edit_room_path(room) %></td>
    <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

